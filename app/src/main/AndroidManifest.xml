<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App2"
        tools:targetApi="31">

        <!-- Activité Splash -->
        <activity
            android:name=".ActivitySplash"
            android:label=""
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:exported="true"> <!-- Ajout de android:exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activité principale -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Ajout de android:exported pour MainActivity -->
        </activity>

        <!-- Receiver pour widget -->
        <receiver
            android:name=".StepsWidget"
            android:exported="false"> <!-- Le widget est interne, donc android:exported="false" -->
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/steps_widget_info" />
        </receiver>

    </application>

</manifest>
